using System;
using System.Collections;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace task
{
    class Attendance
    {
        static void Main(string[] args)
        {
            List<int> rollnumbers=new List<int>();
            List<string> names=new List<string>();
            int rollnumber=0,searchByRollNumber;
            string name="",cont="";

            do
            {
                Console.Write("Enter RollNumber: ");
                rollnumber=Convert.ToInt32(Console.ReadLine());
                Console.Write("Enter Name: ");
                name= Console.ReadLine();
                Console.WriteLine();
                rollnumbers.Add(rollnumber);
                names.Add(name);
                Console.Write("Do you want to add another student details? ");
                cont=Console.ReadLine();
            }while(cont=="y");
            for(int i=0;i<rollnumbers.Count();i++)
            {
                Console.WriteLine("Rollnumber={0}, Name={1}" , rollnumbers[i],names[i]);
            }
            if(cont=="n")
            {
                Console.Write("Please enter the roll number you want to search: ");
                searchByRollNumber=Convert.ToInt32(Console.ReadLine());
                
               if(rollnumbers.Contains(item:searchByRollNumber))
                {
                    searchByRollNumber=searchByRollNumber-1;
                    
                    Console.WriteLine(rollnumbers.IndexOf(searchByRollNumber));
                   
                    Console.WriteLine(rollnumbers.ElementAt(searchByRollNumber));
                    Console.WriteLine(names.ElementAt(searchByRollNumber));
                    
                }
                else
                {
                    Console.WriteLine("sorry rollnumber not found");

                }

            }
            Console.ReadLine();
        }
    }
}
